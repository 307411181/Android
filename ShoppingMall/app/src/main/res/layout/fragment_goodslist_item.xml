<?xml version="1.0" encoding="utf-8"?>
<!--商品列表 listview item布局-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/listview_padding">

    <ImageView
        android:id="@+id/fragment_goodslist_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView

        android:id="@+id/fragment_goodslist_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/fragment_goodslist_imageview"
        android:text="AAAAAA"/>

    <TextView
        android:id="@+id/fragment_goodslist_goodsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_goodslist_goodsname"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/fragment_goodslist_imageview"
        android:text="$25"/>

    <ImageButton
        android:id="@+id/fragment_goodslist_shopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout>
