<?xml version="1.0" encoding="utf-8"?>
<!--     充值页面布局     -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">
    <!--标题栏-->

    <RelativeLayout
        android:id="@+id/linearLayout_logn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_return"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="快捷充值"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"/>
    </RelativeLayout>
    <!--标题栏 end-->

    <LinearLayout
        android:id="@+id/linearLayout_startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_logn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <!--输入手机号的布局   start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recharge_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_recharge_phone_normal"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_300_color_code"/>

            <EditText
                android:id="@+id/editText_recharge_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparentwhite"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/md_grey_500_color_code"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_300_color_code"/>
        <!--输入手机号的布局   end-->


        <!--选择充值时长的布局   start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic__recharge_duration_normal"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_300_color_code"/>

            <TextView
                android:id="@+id/textView_month"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparentwhite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="选择充值时长"
                android:textColor="@color/md_grey_500_color_code"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_300_color_code"/>
        <!--输入手机号的布局   end-->


        <!--充值金额的布局   start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recharge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic__recharge_amount_normal"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_300_color_code"/>

            <TextView
                android:id="@+id/textView_recharge_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparentwhite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="充值金额"
                android:textColor="@color/md_grey_500_color_code"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_300_color_code"/>
        <!--充值金额的布局   end-->


        <!--支付方式 Tab-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_grey_300_color_code"
            android:padding="10dp"
            android:text="支付方式"/>
        <!--支付方式Tab-->

        <!--充值卡的布局   start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recharage_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic__recharge_card_normal"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_300_color_code"/>

            <TextView
                android:id="@+id/textview_recharage_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparentwhite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="充值卡"
                android:textColor="@color/md_grey_500_color_code"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_300_color_code"/>
        <!--充值卡的布局   end-->


        <!--支付宝的布局   start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recharge_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic__recharge_zhifubao_normal"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_300_color_code"/>

            <TextView
                android:id="@+id/textView_recharge_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparentwhite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="支付宝"
                android:textColor="@color/md_grey_500_color_code"
                android:textCursorDrawable="@null"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_300_color_code"/>
        <!--支付宝的布局   end-->
    </LinearLayout>


    <!--最底层的支付按钮-->
