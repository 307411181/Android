<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">
    <!--我的详聊,头布局 start-->
    <RelativeLayout
        android:id="@+id/linearLayout_logn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_blue_selector">

        <ImageView
            android:id="@+id/imageView_return"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:src="@drawable/ic_title_bar_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人设置"
            android:textColor="@color/md_white_color_code"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="保存"
            android:textColor="@color/md_white_color_code"
            android:textSize="18sp"/>
    </RelativeLayout>
    <!--我的详聊,头布局 end-->

    <LinearLayout
        android:id="@+id/ll_rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--下面显示头像的蓝色布局 start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/btn_blue_selector">

            <com.unihiltop.xiangliao.view.CircleImageView
                android:id="@+id/imageView_fragment_myphoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_avatar"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageView_fragment_myphoto"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_fragment_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1390000044859"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_headimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_fragment_phone"
                    android:layout_marginTop="5dp"
                    android:text="更换头像"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="75dp"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <!--显示头像的蓝色布局 end-->


        <!--修改昵称布局  start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            >
            <!--昵称标题,以及昵称 上下布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="#06C3D6"
                    android:textSize="15sp"/>
                <!--用来显示昵称的TextView-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exnert"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!--右侧修改以及下方小红线布局-->
            <LinearLayout
                android:id="@+id/ll_modification_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/red"/>
            </LinearLayout>
            <!--昵称布局最下方 的灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_grey_300_color_code"/>
        </RelativeLayout>
        <!--修改昵称布局  end-->

        <!--显示手机号布局 start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <!--显示手机号,以及详细号码的上下布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#06C3D6"
                    android:textSize="15sp"/>
                <!--用来显示手机号的TextView-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="131"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="******"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <!--昵称布局最下方 的灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_grey_300_color_code"/>
        </RelativeLayout>
        <!--显示手机号布局   end-->

        <!--设置密码布局  start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置密码"
                    android:textColor="#06C3D6"
                    android:textSize="15sp"/>
                <!--用来显示设置密码的TextView-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="Exnert"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!--右侧修改以及下方小红线布局-->
            <LinearLayout
                android:id="@+id/ll_modification_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/red"/>
            </LinearLayout>
            <!--设置密码布局最下方 的灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_grey_300_color_code"/>
        </RelativeLayout>
        <!--设置密码布局  end-->


        <!--确认密码布局  start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textColor="#06C3D6"
                    android:textSize="15sp"/>
                <!--用来显示设置密码的TextView-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="Exnert"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!--确认密码布局最下方 的灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_grey_300_color_code"/>
        </RelativeLayout>
        <!--确认密码布局   end-->

        <!--地址布局 start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#06C3D6"
                    android:textSize="15sp"/>
                <!--用来显示地址的TextView-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石家庄市"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!--右侧修改以及下方小红线布局-->
            <LinearLayout
                android:id="@+id/ll_modification_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/red"/>
            </LinearLayout>
            <!--地址布局最下方 的灰色分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_grey_300_color_code"/>
        </RelativeLayout>
        <!--地址布局    end-->


        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/linearLayout_agree"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_tile_blue_selector"
            android:text="退出登录"
            android:textColor="@color/md_white_color_code"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>