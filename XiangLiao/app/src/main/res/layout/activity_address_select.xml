<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.unihiltop.xiangliao.AddressSelectActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:padding="12dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="地址选择"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_eighteen"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_dark_color"/>

    <ListView
        android:id="@+id/listView_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:dividerHeight="0.5dp"
        android:divider="@color/dividing_line_dark_color">
    </ListView>

</LinearLayout>
