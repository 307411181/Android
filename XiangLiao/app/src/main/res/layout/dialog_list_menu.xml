<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_color_code"
    android:orientation="vertical">

   <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/textView_title_dialog_list_menu"
        android:text="标题"
        android:textColor="@color/md_green_400_color_code"
        android:textSize="@dimen/textsize_twenty_five"        
    	android:padding="10dp"  />

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_green_400_color_code"/>


    <ListView
        android:id="@+id/listView_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:listSelector="#00000000"
        android:divider="@color/transparentwhite"
        android:dividerHeight="10dp" >
    </ListView>   

</LinearLayout>