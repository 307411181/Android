<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/textsize_fourteen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18224468892"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/textsize_fourteen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮编："
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/textsize_fourteen"
            android:layout_below="@+id/textView_name"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/textsize_fourteen"
            android:layout_below="@+id/textView_zip_code"
            android:gravity="center"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_dark_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RadioButton
            android:id="@+id/radioButton_auto_address"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:button="@drawable/radiobutton_select_selector"
            android:paddingLeft="10dp"
            android:text="设为默认"
            android:textColor="@color/text_color_gray"
            android:checked="false" />

        <LinearLayout
            android:id="@+id/linearLayout_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/textsize_fourteen"
                android:layout_below="@id/textView_zip_code"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>