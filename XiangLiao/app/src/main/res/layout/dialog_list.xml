<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/md_white_color_code"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativLayout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_bottom" >

        <ImageView
            android:id="@+id/imageView_return"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_menu_selector"
            android:padding="13dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"

            android:textColor="@color/md_white_color_code"
            android:textSize="@dimen/textsize_twenty" />
    </RelativeLayout>


    <ListView
        android:id="@+id/listView_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:listSelector="#00000000"
        android:divider="@color/transparentwhite"
        android:dividerHeight="10dp" >
    </ListView>   

</LinearLayout>